<div class="container">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3">
      
      <h1>Listing Trees</h1>

      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Coordinates</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @trees.each do |tree| %>
            <tr>
              <td><%= tree.name %></td>
              <td><%= tree.coordinates %></td>
              <td><%= link_to 'Show', tree %></td>
              <td><%= link_to 'Edit', edit_tree_path(tree) %></td>
              <td><%= link_to 'Remove', tree, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Tree', new_tree_path %>


    </div>
  </div>
</div>

